{
  "name": "bun-hono",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "db:generate": "bun --filter 'server' drizzle:generate",
    "db:migrate": "bun --filter 'server' drizzle:migrate",
    "db:push": "bun --filter 'server' drizzle:push",
    "db:studio": "bun --filter 'server' drizzle:studio",
    "format": "prettier -uw --cache .",
    "format:check": "prettier -uc --cache .",
    "start": "bun --filter 'server' start",
    "ui:add": "cd packages/frontend && bunx --bun shadcn-ui@latest add",
    "ws:build": "bun --filter '*' build",
    "ws:dev": "bun --filter '*' dev",
    "ws:lint": "bun --filter '*' lint",
    "ws:lint:fix": "bun --filter '*' lint:fix",
    "ws:typecheck": "bun --filter '*' typecheck"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.10",
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.5.0",
    "typescript": "^5.4.5"
  }
}
